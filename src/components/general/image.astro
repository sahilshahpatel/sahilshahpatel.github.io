---
import { Image as AstroImage } from "astro:assets"

interface Props {
    src: ImageMetadata,
    alt: string,
    attrs?: {[x: string]: any}
}
const { src, alt, ...attrs } = Astro.props;
---
<style>
    /* Low specificity for easy overriding */
    :where(img) {
        height: auto;
    }
</style>
<AstroImage
    src={src}
    alt={alt}
    widths={[100, 300, 500, 750, 1000, src.width]}
    {...attrs}
/>
---
import { Image as AstroImage } from "astro:assets"

interface Props {
    src: ImageMetadata,
    alt: string,

    loading?: "eager" | "lazy",
    attrs?: {[x: string]: any}
}
const { src, alt, ...attrs } = Astro.props;
---
<style>
    /* Low specificity for easy overriding */
    :where(img) {
        height: auto;
    }
</style>
<AstroImage
    src={src}
    alt={alt}
    widths={[240, 540, 720, src.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${src.width}px`}
    {...attrs}
/>
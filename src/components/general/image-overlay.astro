---
import Image from './image.astro';
import type { ImageMetadata } from 'astro'

interface Props {
    id?: string,
    class?: string,
    img: {
        meta: ImageMetadata,
        alt:  string,
        pos?: string,
    },
    gif?: {
        meta: ImageMetadata,
        alt:  string,
        pos?: string
    },
}
const {id, class: className, img, gif, ...rest} = Astro.props;
---
<style lang="scss" define:vars={{
    "bg-position": img.pos || gif?.pos,
}}>
    @use "@styles/global/variables" as *;

    .image-overlay {
        position: relative;
        padding: min(7%, map-get($sizes, 800));

        display: flex;
        justify-content: stretch;
        align-items: center;

        .bg-image {
            // Absolute position the img container so it doesn't affect layout size
            position: absolute;
            inset: 0;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: var(--bg-position, center);
            }

            &::after {
                content: '';
                display: block;
                position: absolute;
                inset: 0;
                background-image: $vignette;
                background-repeat: no-repeat;
                background-size: cover;
            }
        }

        .overlay {
            width: 100%;
            background-color: var(--clr-primary-100);
            opacity: 0.95;
        }
    }
</style>

<div id={id} class:list={["image-overlay", className]} {...rest}>
    <div class="bg-image">
        { gif ?
            <Image src={gif.meta} alt={gif.alt} />
            : <Image src={img.meta} alt={img.alt} />
        }
    </div>

    <div class="overlay">
        <slot />
    </div>
</div>

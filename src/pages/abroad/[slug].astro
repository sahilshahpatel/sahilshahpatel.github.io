---
import { AbroadData } from '../../data/types';
import { getSlug } from '../../util';

export async function getStaticPaths() {
    const abroad = await Astro.glob<AbroadData>('../../data/abroad/*.mdx');
    return abroad.map(mdx => ({
        params: { slug: getSlug(mdx.file) },
        props: { item: mdx }
    }));
}

const { slug } = Astro.params;
const { item } = Astro.props;
    
import '../../scss/abroad-page.scss';
import BasicPage from '../../layouts/basic-page.astro';
---

<BasicPage>
    <title slot="title">{ item.frontmatter.what } | Sahil Patel</title>

    <div class="abroad-banner | bg-img-overlay" style={`--bg-img-url: url(${ item.frontmatter.img }); ${ item.frontmatter.imgPos ? '--bg-position: ' + item.frontmatter.imgPos + ';' : ''}`}>
        <div class="overlay p-400 text-center">
            <h1>
                <div class="heading-spread text-gradient-accent">{ item.frontmatter.where }</div>
                <div class="fs-900 fw-bold">{ item.frontmatter.what }</div>
            </h1>
        </div>
    </div>

    <div class="markdown container pt-400">
        <item.Content />
    </div>

    <div class="text-center mt-200">
        <a class="see-more-link subtitle" data-point-left href={`/abroad#${ slug }`}>
            <i class="bi-arrow-left"></i>
            <span>Back to all travel</span>
        </a>
    </div>
</BasicPage>
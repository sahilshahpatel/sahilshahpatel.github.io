---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { getImage } from '../../util';

import ProfessionalPage from '../../layouts/professional-page.astro';
import '../../scss/abroad-page.scss';


export async function getStaticPaths() {
    const abroad = await getCollection('abroad');
    return abroad.map(item => ({
        params: { slug: item.slug },
        props:  { item: item }
    }));
}

interface Props {
    item: CollectionEntry<'abroad'>,
}

const { item } = Astro.props;
const { Content } = await item.render();

const bannerImg = await getImage("abroad", item.data.img);
---
<style define:vars={{
    bannerImgUrl: `url(${bannerImg.src})`,
    bannerImgPos: item.data.imgPos,
}}>
    .abroad-banner {
        --bg-img-url: var(--bannerImgUrl);
        --bg-position: var(--bannerImgPos);
    }
</style>
<ProfessionalPage>
    <title slot="title">{ item.data.what } | Sahil Patel</title>

    <div class="abroad-banner | bg-img-overlay">
        <div class="overlay p-400 text-center">
            <h1>
                <div class="heading-spread text-gradient-accent">{ item.data.where }</div>
                <div class="fs-900 fw-bold">{ item.data.what }</div>
            </h1>
        </div>
    </div>

    <div class="markdown container pt-400">
        <Content />
    </div>

    <div class="text-center mt-200">
        <a class="see-more-link subtitle" data-point-left href={`/abroad#${ item.slug }`}>
            <i class="bi-arrow-left"></i>
            <span>Back to all travel</span>
        </a>
    </div>
</ProfessionalPage>
